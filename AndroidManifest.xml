<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mavu"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:icon="@drawable/mavu_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.mavu.Home"
            android:label="@string/title_activity_home" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.mavu.Account_Maint"
            android:label="@string/account_maint" >
        </activity>
        <activity
            android:name="com.mavu.Account_View"
            android:label="@string/account_view" >
        </activity>
        <activity
            android:name="com.mavu.Create_Post"
            android:label="@string/create_post" >
        </activity>
        <activity
            android:name="com.mavu.Post_View"
            android:label="@string/post_view" >
        </activity>
        <activity
            android:name="com.mavu.Settings"
            android:label="@string/menu_settings" >
        </activity>
        <activity
            android:name="com.mavu.Login"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name="com.mavu.MyPosts"
            android:label="@string/myPosts" >
        </activity>
    </application>

</manifest>